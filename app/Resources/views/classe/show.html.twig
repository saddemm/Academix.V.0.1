{% extends 'base.html.twig' %}
{% block title %} Classe{% endblock %}
{% block body %}
    <section class="panel panel-with-borders">
        <div class="panel-heading">
            <h3 class="color-black-ecole">
                <div class="dropdown pull-right">
                    <button type="button" class="btn btn-perso dropdown-toggle " data-toggle="dropdown" aria-expanded="false">
                        Selectionnez une action
                    </button>
                    <ul class="dropdown-menu">
                        <a class="dropdown-item icmn-user-plus" href="javascript: void(0);" data-toggle="modal" data-target="#myModal1" > Affecter un élève</a>
                        <a class="dropdown-item icmn-user-plus" href="javascript: void(0);" data-toggle="modal" data-target="#myModal" > Affecter un enseignant</a>
                    </ul>
                </div>

                <i class="fa fa-pencil color-black-ecole" aria-hidden="true"></i>
                GESTION DES CLASSES
            </h3>
        </div>
        <div class="panel-body">
            <div class="col-lg-6">
                <i class="fa fa-user color-black-ecole" aria-hidden="true"></i>
                Liste des élèves
                <table class="table table-hover nowrap" id="example1" width="100%">
                    <thead class="thead-default">
                    <tr>
                        <th>#</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for classe in classes %}
                        <th scope="row">
                            <input type="checkbox">
                        </th>
                        <td>{{  }}</td>
                        <td>{{  }}</td>
                        <td>
                            <a href="javascript: void(0);" class="link-underlined" ><i class="icmn-user-cancel"><!-- --></i>Annuler</a>
                        </td>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col-lg-6">
                <i class="fa fa-black-tie color-black-ecole" aria-hidden="true"></i>
                Liste des enseignants
                <br/>
                <table class="table table-hover nowrap" id="example1" width="100%">
                    <thead class="thead-default">
                    <tr>
                        <th>#</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Matière</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for classe in classes %}
                        <th scope="row">
                            <input type="checkbox">
                        </th>
                        <td>{{  }}</td>
                        <td>{{  }}</td>
                        <td>{{  }}</td>
                        <td>
                            <a href="javascript: void(0);" class="link-underlined" ><i class="icmn-user-cancel"><!-- --></i>Annuler</a>
                        </td>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h3 class="modal-title color-black-ecole"><i class="fa fa-pencil color-black-ecole" aria-hidden="true"></i> AFFECTER DES ENSEIGNANTS</h3>
                    </div>
                    <form action="{{ path('classe_new') }}" method="post" enctype="multipart/form-data">
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="col-lg-12">
                                        <!-- liste multiple des enseignants-->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-perso icmn-user-plus"> Ajouter</button>
                        <button type="button" class="btn btn-default icmn-user-cancel"> Annuler</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="myModal1" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h3 class="modal-title color-black-ecole"><i class="fa fa-pencil color-black-ecole" aria-hidden="true"></i> AFFECTER DES ELEVES</h3>
                    </div>
                    <form action="{{ path('classe_new') }}" method="post" enctype="multipart/form-data">
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="col-lg-12">
                                        <!-- liste multiple des eleves-->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-perso icmn-user-plus"> Ajouter</button>
                        <button type="button" class="btn btn-default icmn-user-cancel"> Annuler</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    <script>
        $(function () {
            // Datatables
            $('#example1').DataTable({
                "lengthMenu": [[50, 100, 200, -1], [50, 100, 200, "All"]],
                responsive: true,
                "autoWidth": false
            });
        })
    </script>
    <!-- End Page Scripts -->
{% endblock %}
