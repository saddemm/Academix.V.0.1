{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sanction</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sanction.id }}</td>
            </tr>
            <tr>
                <th>Cause</th>
                <td>{{ sanction.cause }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if sanction.createdAt %}{{ sanction.createdAt|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sanction_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('sanction_edit', { 'id': sanction.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
