<form action="{{ path('enseignant_edit', { 'id': enseignant.id }) }}" method="post" enctype="multipart/form-data">
    <br />
    <h5>FICHE ENSEIGNANT</h5>
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <label for="l301">Identifiant</label>
                <input value="{{ enseignant.username }}" type="text" class="form-control" placeholder="Identifiant" disabled="" id="l0">
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label for="l302">Mot de passe</label>
                <input value="{{ enseignant.password }}" type="password" class="form-control password" placeholder="Mot de passe" disabled="" id="l0">
            </div>
        </div>
    </div>
    <h5 class="color-black-ecole icmn-profile"> Informations sur l'enseignant</h5>
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <label for="l30">Nom</label>

                {{ form_widget(form.Utilisateur.nom) }}
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label for="l30">Prénom</label>
                {{ form_widget(form.Utilisateur.prenom) }}
            </div>
        </div>



        <div class="col-lg-6">
            <div class="form-group">
                <label for="l30">E-mail</label>
                {{ form_widget(form.Utilisateur.email) }}
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label for="l30">Téléphone</label>
                {{ form_widget(form.Utilisateur.telephone) }}
            </div>
        </div>

        <div class="col-lg-6">
            <div class="form-group">
                <label class="form-control-label" for="l15">Sex</label>
                {{ form_widget(form.Utilisateur.sex) }}
            </div>

        </div>


        <div class="col-lg-6">
            <div class="form-group">
                <label class="form-control-label" for="l15">Date de naissance</label>
                {{ form_widget(form.Utilisateur.dateNaissance) }}
            </div>

        </div>

        <div class="col-lg-6">
            <div class="form-group">
                <label class="form-control-label" for="l15">Date recrutement</label>
                {{ form_widget(form.dateRecrutement) }}
            </div>

        </div>




        <div class="col-lg-6">
            <div class="form-group">
                <label class="form-control-label" for="l15">Matière</label>
                {{ form_widget(form.matiere) }}
            </div>
        </div>


        <div class="col-lg-6">
            <div class="form-group">
                <label class="form-control-label" for="l15">Adresse</label>
                {{ form_widget(form.Utilisateur.adresse) }}
            </div>

        </div>


        <div class="col-lg-12">
            <div class="form-group ">
                <i class="icmn-image"></i><label class="form-control-label" for="l15"> Modifier l'image</label>
                {{ form_widget(form.Utilisateur.myFile, {'attr': {'data-default-file': asset('uploads/photos/'~enseignant.imageName)}}) }}

            </div>
        </div>
        {{ form_widget(form._token) }}


    </div>

    <div class="form-actions">
        <div class="form-group">
            <button class="btn btn-perso icmn-plus-circle"> Modifier</button>
        </div>
    </div>

</form>

{% block javascripts %}
    <script src="{{ asset('../assets/vendors/showpassword/bootstrap-show-password.min.js') }}"></script>
    <script>
        // Show/Hide Password
        $('.password').password({
            eyeClass: '',
            eyeOpenClass: 'icmn-eye',
            eyeCloseClass: 'icmn-eye-blocked'
        });
    </script>


{% endblock %}