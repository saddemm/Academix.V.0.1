{% extends 'base.html.twig' %}

{% block body %}

    <section class="panel panel-with-borders">
    <div class="panel-heading">

            <h3 class="modal-title color-black-ecole"><i class="fa fa-black-tie color-black-ecole" aria-hidden="true"></i> Modifier enseignant</h3>

        <form action="{{ path('enseignant_edit', { 'id': enseignant.id }) }}" method="post" enctype="multipart/form-data">
            <div class="modal-body">

                <div class="row">
                    <div class="col-lg-12">

                        <h5 class="color-black-ecole icmn-cogs"> Informations sur le compte</h5>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="l301">Identifiant</label>
                                    <input value="{{ enseignant.username }}" type="text" class="form-control" placeholder="Identifiant" disabled="" id="l0">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="l302">Mot de passe</label>
                                    <input value="{{ enseignant.password }}" type="text" class="form-control" placeholder="Mot de passe" disabled="" id="l0">
                                </div>
                            </div>
                        </div>
                        <h5 class="color-black-ecole icmn-profile"> Informations sur l'enseignant</h5>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="l30">Nom</label>

                                    {{ form_widget(form.Utilisateur.nom) }}
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="l30">Prénom</label>
                                    {{ form_widget(form.Utilisateur.prenom) }}
                                </div>
                            </div>



                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="l30">E-mail</label>
                                    {{ form_widget(form.Utilisateur.email) }}
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="l30">Téléphone</label>
                                    {{ form_widget(form.Utilisateur.telephone) }}
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="l15">Sex</label>
                                    {{ form_widget(form.Utilisateur.sex) }}
                                </div>

                            </div>


                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="l15">Date de naissance</label>
                                    {{ form_widget(form.Utilisateur.dateNaissance) }}
                                </div>

                            </div>

                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="l15">Date recrutement</label>
                                    {{ form_widget(form.dateRecrutement) }}
                                </div>

                            </div>




                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="l15">Matière</label>
                                    {{ form_widget(form.matiere) }}
                                </div>
                            </div>


                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="l15">Adresse</label>
                                    {{ form_widget(form.Utilisateur.adresse) }}
                                </div>

                            </div>


                            <div class="col-lg-12">
                                <h5 class="color-black-ecole icmn-image"> Image de l'enseignant</h5>
                                <div class="cui-ecommerce--catalog--item">
                                    <div class="cui-ecommerce--catalog--item--img">
                                        <a href="javascript: void(0);">
                                            <img src="{{ asset('uploads/photos/') }}{{ enseignant.imageName }}" />
                                        </a>
                                        <a href="javascript: void(0);" class="link-underlined cui-ecommerce--catalog--item--img-remove">
                                            <i class="icmn-cross2"><!-- --></i> Remove
                                        </a>
                                    </div>
                                </div>
                                <div class="form-group ">
                                    {{ form_widget(form.Utilisateur.myFile) }}
                                </div>
                            </div>


                        </div>

                    </div>




                </div>

            </div>
            <div class="modal-footer">

                <button class="btn btn-perso icmn-plus-circle"> Modifier</button>
                <button type="button" class="btn btn-default icmn-cancel-circle" data-dismiss="modal"> Annuler</button>
            </div>
            {{ form_widget(form._token) }}
        </form>
    </div>

    </section>


{% endblock %}